@model IEnumerable<ProductDemoMvc.Models.Category>

@{
    ViewBag.Title = "Index";
}

<h2>Quản lý Danh mục Sản phẩm</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
           Tên danh mục
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.ActionLink("Tạo mới", "Edit", new { id=item.CategoryID }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.CategoryID }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.CategoryID })
        </td>
    </tr>
}

</table>
